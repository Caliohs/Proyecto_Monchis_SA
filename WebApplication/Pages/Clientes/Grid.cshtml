@page
@model WebApplication.Pages.Clientes.GridModel
@{
}
<div class="container">
    <div class="card">
        <div class="card-header">
           Clientes
        </div>
        <div class="card-body">

            <a class="btn btn-primary" asp-page="Edit">
                <i class='bx bx-add-to-queue'></i>
            </a>

            <div class="row">
                <div class="col-12">
                    <table id="GridView" class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nombre Completo</th>
                                <th>Direccion</th>
                                <th>Telefono</th>
                                <th>Estado</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.GridList)
                            {
                            <tr>
                                <td>@item.ClientesId</td>
                                <td>@item.NombreCompleto</td>
                                <td>@item.Direccion</td>
                                <td>@item.Telefono</td>
                                <td>@(item.Estado?"Activo":"Inactivo")</td>
                                <td>
                                    <a class="btn btn-primary" asp-page="Edit" asp-route-id="@item.ClientesId">
                                        <i class='bx bx-edit-alt'></i>
                                    </a>
                                    <button type="button" class="btn btn-danger"
                                            onclick="ClientesGrid.OnClickEliminar(@item.ClientesId)">
                                        <i class='bx bx-trash'></i>
                                    </button>
                                </td>
                            </tr>
}

                        </tbody>
                    </table>


                </div>
            </div>


        </div>
    </div>

</div>

@section Scripts{


    <script defer src="~/App/Clientes/Grid.js"></script>



}
