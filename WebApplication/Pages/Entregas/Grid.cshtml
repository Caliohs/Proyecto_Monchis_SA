@page
@model WebApplication.Pages.Entregas.GridModel
@{ }


<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            Entregas
        </div>
        <div class="card-body">

            <a class="btn btn-primary" asp-page="Edit">
                <i class='bx bx-add-to-queue'></i>
            </a>

            <div class="row">
                <div class="col-12">
                    <table id="GridView" class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Cliente</th>
                                <th>Camion</th>
                                <th>Matricula</th>
                                <th>Conductor</th>
                                <th>Provincia</th>
                                <th>Canton</th>
                                <th>Distrito</th>
                                <th>Fecha De entrega</th>
                                <th>Estado</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.GridList)
                            {
                                <tr>
                                    <td>@item.EntregaId</td>
                                    <td>@item.Pedidos.Cliente</td>
                                    <td>@item.Camiones.MarcaCamion</td>
                                    <td>@item.Camiones.Matricula</td>
                                    <td>@item.Camiones.Conductor</td>
                                    <td>@item.Provincia.NombreCatalogoProvincia</td>
                                    <td>@item.Canton.NombreCatalogoCanton</td>
                                    <td>@item.Distrito.NombreCatalogoDistrito</td>
                                    <td>@item.FechaEntrega.ToString("dd/MM/yyyy")</td>
                                    <td>@(item.Estado?"Activa":"Inactiva")</td>
                                    <td>
                                        <a class="btn btn-primary" asp-page="Edit" asp-route-id="@item.EntregaId">
                                            <i class='bx bx-edit-alt'></i>
                                        </a>
                                        <button type="button" class="btn btn-danger"
                                                onclick="EntregasGrid.OnClickEliminar(@item.EntregaId)">
                                            <i class='bx bx-trash'></i>
                                        </button>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>


                </div>
            </div>


        </div>
    </div>

</div>

@section Scripts{


    <script defer src="~/App/Entregas/Grid.js"></script>


}

