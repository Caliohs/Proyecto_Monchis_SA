@page
@model WebApplication.Pages.Camion.EditModel
@{
}
<div id="AppEdit" class="container" data-entity="@JsonSerializer.Serialize(Model.Entity)" v-cloak>
    <div class="card">
        <div class="card-header">
            @(Model.id.HasValue ? "Actualizar":"Nuevo")
        </div>
        <div class="card-body">
            <form id="FormEdit">

                <input type="hidden" asp-for="Entity.CamionId" v-model="Entity.CamionId" />

                <div class="form-group mb-3">
                    <label for="Entity.MarcaCamion" class="form-label">Marca Camion</label>
                    <select asp-for="Entity.MarcaCamion" class="form-select"  v-model="Entity.MarcaCamion"
                            asp-items="@(new SelectList(Model.MarcaCamionLista,"Descripcion", "Descripcion"))"
                            required>
                        <option value=""></option>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.Conductor" class="form-label">Conductor</label>
                    <select class="form-select" asp-for="Entity.Conductor" v-model="Entity.Conductor"
                            asp-items="@(new SelectList(Model.ConductorLista,"NombreCompleto", "NombreCompleto"))"
                            required>
                        <option value=""></option>
                    </select>
                </div>
            

                <div class="form-group mb-3">
                    <label for="Entity.Matricula" class="form-label">Matricula</label>
                    <input type="text" class="form-control" asp-for="Entity.Matricula" v-model="Entity.Matricula" maxlength="250" required>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.Color" class="form-label">Color</label>
                    <input type="text" class="form-control" asp-for="Entity.Color" v-model="Entity.Color" maxlength="250" required>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.FechaModelo" class="form-label">Fecha Modelo</label>
                    <input type="date" class="form-control" asp-for="Entity.FechaModelo" maxlength="250" v-model="Entity.FechaModelo" required>
                    <date value="Entity.FechaModelo"></date>
                </div>

                <div class="form-group form-check form-switch">
                    <input class="form-check-input" type="checkbox" asp-for="Entity.Estado" v-model="Entity.Estado" value="true">
                    <label class="form-check-label" for="Entity_Estado">Estado</label>
                </div>

                <div class="row">
                    <div class="col-4">
                        <button type="button" @@click="Save" class="btn btn-outline-primary">
                            @(Model.id.HasValue ? "Actualizar":"Agregar")
                        </button>
                    </div>
                </div>

            </form>


        </div>
    </div>
</div>

@section Scripts{


    <script defer src="~/App/Camion/Edit.js"></script>
}