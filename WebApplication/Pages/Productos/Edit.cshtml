@page
@model WebApplication.Pages.Vehiculo.EditModel
@{ }

<div id="AppEdit" class="container" data-entity="@JsonSerializer.Serialize(Model.Entity)" v-cloak>
    <div class="card">
        <div class="card-header">
            @(Model.id.HasValue ? "Actualizar": "Nuevo")
        </div>
        <div class="card-body">
            <form id="FormEdit">
                <input type="hidden" asp-for="Entity.ProductoId" v-model="Entity.ProductoId" />

                <div class="form-group mb-3">
                    <label for="Entity.CategoriaId" class="form-label">Categoria</label>
                    <select class="form-select" asp-for="Entity.CategoriaId" v-model="Entity.CategoriaId"
                            asp-items="@(new SelectList(Model.CategoriaLista,"CategoriaId", "Descripcion"))"
                            required>
                        <option value=""></option>
                    </select>
                </div>


                <div class="form-group mb-3">
                    <label for="Entity.Producto" class="form-label">Producto</label>
                    <input type="text" class="form-control" asp-for="Entity.Producto" v-model="Entity.Producto" maxlength="250" required>

                </div>

                <div class="form-group mb-3">
                    <label for="Entity.Color" class="form-label">Color</label>
                    <select class="form-select" asp-for="Entity.Color" v-model="Entity.Color"
                            required>
                        <option value="Negro">Negro</option>
                        <option value="Blanco">Blanco</option>
                        <option value="Cafe">Cafe</option>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.Material" class="form-label">Material</label>
                    <select class="form-select" asp-for="Entity.Material" v-model="Entity.Material"
                            required>
                        <option value="Madera">Madera</option>
                        <option value="Melanina">Melanina</option>
                        <option value="Cuero">Cuero</option>
                        <option value="Metal">Metal</option>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.Cantidad_Disponible" class="form-label">Cantidad Disponible</label>
                    <input type="number" class="form-control" asp-for="Entity.Cantidad_Disponible" maxlength="250" v-model="Entity.Cantidad_Disponible" required>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.Precio" class="form-label">Precio</label>
                    <input type="number" class="form-control" asp-for="Entity.Precio" maxlength="250" v-model="Entity.Precio" required>
                </div>

                <div class="form-group  form-check form-switch">
                    <input class="form-check-input" type="checkbox" asp-for="Entity.Estado" v-model="Entity.Estado" value="true">
                    <label class="form-check-label" for="Entity.Estado">Estado</label>
                </div>

                <div class="row">
                    <div class="col-4">
                        <button type="button" @@click="Save" class="btn btn-outline-primary">
                            @(Model.id.HasValue ? "Actualizar":"Agregar")
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{

    <script defer src="~/App/Productos/Edit.js"></script>

}
